#!/bin/sh
### BEGIN INIT INFO
# Provides:          picoclaw
# Required-Start:    $network
# Required-Stop:     $network
# Default-Start:     3 5
# Default-Stop:      0 1 2 6
# Description:       PicoClaw AI assistant gateway
### END INIT INFO

DAEMON=/usr/bin/picoclaw
PIDFILE=/var/run/picoclaw.pid
WORKDIR=/var/lib/picoclaw
CONFIG=/etc/picoclaw/config.json
LOGFILE=/var/log/picoclaw.log

case "$1" in
    start)
        echo "Starting picoclaw..."
        if [ ! -f "$CONFIG" ]; then
            echo "No config found at $CONFIG â€” copy from /etc/picoclaw/config.json.default and edit"
            exit 1
        fi
        start-stop-daemon -S -b -m -p "$PIDFILE" \
            -d "$WORKDIR" \
            -x "$DAEMON" -- -c "$CONFIG" \
            >> "$LOGFILE" 2>&1
        ;;
    stop)
        echo "Stopping picoclaw..."
        start-stop-daemon -K -p "$PIDFILE"
        rm -f "$PIDFILE"
        ;;
    restart)
        $0 stop
        sleep 1
        $0 start
        ;;
    status)
        if [ -f "$PIDFILE" ] && kill -0 "$(cat "$PIDFILE")" 2>/dev/null; then
            echo "picoclaw is running (PID $(cat "$PIDFILE"))"
        else
            echo "picoclaw is not running"
            exit 1
        fi
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac
